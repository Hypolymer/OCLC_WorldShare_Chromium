<?xml version="1.0" encoding="utf-8"?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>OCLC WorldShare</Name>
  <Author>Bill Jones</Author>
  <Version>1.3</Version>
  <Active>True</Active>
  <Type>Addon</Type>
  <Description>This Addon opens your OCLC WorldShare account.</Description>
  <Forms>
    <Form>FormMain</Form>
  </Forms>
  <Settings>
    <Setting name='OCLC_WorldShareURL' value='https://www.oclc.org/apps/oclc/welcome?service=wms&amp;inst_type=wayf' type='String'>
      <Description>The URL for your OCLC_WorldShare service.</Description>
    </Setting>
    <Setting name="Username" value="" type="String">
      <Description>Your WorldShare ILL username.</Description>
    </Setting>
    <Setting name="Password" value="" type="String">
      <Description>Your WorldShare ILL password.</Description>
    </Setting>
  </Settings>
  <Files>
    <File>OCLC_WorldShare_Chromium.lua</File>
  </Files>
</Configuration>